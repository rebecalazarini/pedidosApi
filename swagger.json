{
    "openapi": "3.0.0",
    "info": {
        "title": "API de Pedidos",
        "version": "1.0.0",
        "description": "Documentação da API Pedidos<br>Criada para aulas de criação de api<br>Tecnologias: Node.js, Prisma, MySQL[MariaDB], Swagger",
        "contact": {
            "name": "Rebeca Lazarini",
            "email": "rebecalazarini2007@gmail.com",
            "url": "https://github.com/rebecalazarini"
        }
    },
    "servers": [
        {
            "url": "http://localhost:3001",
            "description": "Servidor local"
        }
    ],
    "tags": [
        {
            "name": "Teste",
            "description": "Endpoint de teste da API"
        },
        {
            "name": "CRUD de Usuarios",
            "description": "Endpoints de usuarios"
        },
        {
            "name": "CRUD de Produtos",
            "description": "Endpoints de produtos"
        },
        {
            "name": "CRUD de Pedidos",
            "description": "Endpoints de pedidos"
        }
    ],
    "paths": {
        "/": {
            "get": {
                "tags": [
                    "Teste"
                ],
                "summary": "Endpoint de teste geral da API",
                "responses": {
                    "200": {
                        "description": "Retorna uma mensagem de teste"
                    },
                    "500": {
                        "description": "Erro ao processar a requisição"
                    }
                }
            }
        },
        "/api/usuarios": {
            "get": {
                "tags": [
                    "CRUD de Usuarios"
                ],
                "summary": "Endpoint para obter todos os usuários",
                "responses": {
                    "200": {
                        "description": "Lista de usuários cadastrados"
                    },
                     "500": {
                        "description": "Erro ao processar a requisição"
                    }
                }
            },
            "post": {
                "tags": [
                    "CRUD de Usuarios"
                ],
                "summary": "Endpoint para cadastrar novo usuário",
                "requestBody": {
                    "description": "Dados de login",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "nome": {
                                        "type": "string",
                                        "default": "Ana Silva"
                                    },
                                    "email": {
                                        "type": "string",
                                        "default": "ana.silva@email.com"
                                    },
                                    "senha": {
                                        "type": "string",
                                        "default": "senha123"
                                    },
                                    "tipo": {
                                        "type": "string",
                                        "default": "CLIENTE"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Novo usuário"
                    },
                    "400": {
                        "description": "Erro ao cadastrar usuário, envie nome, email, senha e tipo [ADMIN, CLIENTE]"
                    }
                }
            }
        },
        "/api/usuarios/{id}": {
            "patch": {
                "tags": [
                    "CRUD de Usuarios"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID do usuário a ser atualizado",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "summary": "Endpoint para alterar dados do usuário",
                "requestBody": {
                    "description": "Dados de exemplo",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "nome": {
                                        "type": "string",
                                        "default": "Ana Silva"
                                    },
                                    "email": {
                                        "type": "string",
                                        "default": "ana.silva@email.com"
                                    },
                                    "senha": {
                                        "type": "string",
                                        "default": "senha123"
                                    },
                                    "tipo": {
                                        "type": "string",
                                        "default": "CLIENTE"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "202": {
                        "description": "Usuário atualizado com sucesso"
                    },
                    "400": {
                        "description": "Erro ao atualizar usuário, envie nome, email, senha e tipo [ADMIN, CLIENTE]"
                    }
                }
            },
             "delete": {
                "tags": [
                    "CRUD de Usuarios"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "Id do usuário a ser excluído",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "summary": "Endpoint para excluir um usuário",
                "responses": {
                    "204": {
                        "description": "Usuário excluído com sucesso"
                    },
                    "500": {
                        "description": "Não foi possível excluir usuário"
                    }
                }
            }
        },
          "/api/produtos": {
            "get": {
                "tags": [
                    "CRUD de Produtos"
                ],
                "summary": "Endpoint para obter todos os produtos",
                "responses": {
                    "200": {
                        "description": "Lista de produtos cadastrados"
                    },
                     "500": {
                        "description": "Erro ao processar a requisição"
                    }
                }
            },
            "post": {
                "tags": [
                    "CRUD de Produtos"
                ],
                "summary": "Endpoint para cadastrar novo produto",
                "requestBody": {
                    "description": "Dados do produto",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "nome": {
                                        "type": "string",
                                        "default": "Papel a4"
                                    },
                                    "descricao": {
                                        "type": "string",
                                        "default": "Papel A4 Branco"
                                    },
                                    "imagem": {
                                        "type": "string",
                                        "default": "imagem_papel_a4.jpg"
                                    },
                                    "preco": {
                                        "type": "number",
                                        "default": 10.00
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Novo produto cadastrado"
                    },
                    "400": {
                        "description": "Erro ao cadastrar produto"
                    }
                }
            }
        },
        "/api/produtos/{id}": {
            "patch": {
                "tags": [
                    "CRUD de Produtos"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID do produto a ser atualizado",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "summary": "Endpoint para alterar dados do produto",
                "requestBody": {
                    "description": "Dados de exemplo",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "nome": {
                                        "type": "string",
                                        "default": "Papel a4"
                                    },
                                    "descricao": {
                                        "type": "string",
                                        "default": "Papel A4 Branco"
                                    },
                                    "imagem": {
                                        "type": "string",
                                        "default": "imagem_papel_a4.jpg"
                                    },
                                    "preco": {
                                        "type": "number",
                                        "default": 10.00
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "202": {
                        "description": "Novo produto cadastrado"
                    },
                    "400": {
                        "description": "Erro ao atualizar produto"
                    }
                }
            },
             "delete": {
                "tags": [
                    "CRUD de Produtos"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "Id do produto a ser excluído",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "summary": "Endpoint para excluir um produto",
                "responses": {
                    "204": {
                        "description": "Produto excluído com sucesso"
                    },
                    "500": {
                        "description": "Não foi possível excluir produto"
                    }
                }
            }
        },
           "/api/pedidos": {
            "get": {
                "tags": [
                    "CRUD de Pedidos"
                ],
                "summary": "Endpoint para obter todos os pedidos",
                "responses": {
                    "200": {
                        "description": "Lista de pedidos cadastrados"
                    },
                     "500": {
                        "description": "Erro ao processar a requisição"
                    }
                }
            },
            "post": {
                "tags": [
                    "CRUD de Pedidos"
                ],
                "summary": "Endpoint para cadastrar novo pedido",
                "requestBody": {
                    "description": "Dados do pedido",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "usuarioId": {
                                        "type": "number",
                                        "default": 1
                                    },
                                    "produtoId": {
                                        "type": "number",
                                        "default": 1
                                    },
                                    "quantidade": {
                                        "type": "number",
                                        "default": 1
                                    },
                                    "data": {
                                        "type": "date-time",
                                        "default": "2023-01-01T00:00:00.000Z"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Novo pedido cadastrado"
                    },
                    "400": {
                        "description": "Erro ao cadastrar pedido"
                    }
                }
            }
        },
        "/api/pedidos/{id}": {
            "patch": {
                "tags": [
                    "CRUD de Pedidos"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID do pedido a ser atualizado",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "summary": "Endpoint para alterar dados do pedido",
                "requestBody": {
                    "description": "Dados de exemplo",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "usuarioId": {
                                        "type": "number",
                                        "default": 1
                                    },
                                    "produtoId": {
                                        "type": "number",
                                        "default": 1
                                    },
                                    "quantidade": {
                                        "type": "number",
                                        "default": 1
                                    },
                                    "data": {
                                        "type": "date-time",
                                        "default": "2023-01-01T00:00:00.000Z"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "202": {
                        "description": "Novo pedido cadastrado"
                    },
                    "400": {
                        "description": "Erro ao atualizar predido"
                    }
                }
            },
             "delete": {
                "tags": [
                    "CRUD de Pedidos"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "Id do pedido a ser excluído",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "summary": "Endpoint para excluir um pedido",
                "responses": {
                    "204": {
                        "description": "Pedido excluído com sucesso"
                    },
                    "500": {
                        "description": "Não foi possível excluir pedido"
                    }
                }
            }
        }
    }
}